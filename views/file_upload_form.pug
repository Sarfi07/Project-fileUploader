extends layout

block content
  .container.mx-auto.mt-10.max-w-md
    h1.text-2xl.font-bold.mb-5.text-center Upload a File

    form(method="POST" enctype="multipart/form-data" class="bg-white p-6 rounded-lg shadow-md")
      .mb-4
        label(for="name" class="block text-sm font-medium text-gray-700") File Name
        input(type="text" name="name" id="name" placeholder="Enter file name" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm")

      .mb-4
        label(for="file" class="block text-sm font-medium text-gray-700") Choose File
        input(type="file" name="file" id="file" required class="mt-1 block w-full text-sm text-gray-900 border border-gray-300 rounded-md cursor-pointer focus:outline-none")

      .flex.space-x-4
        button(type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-bold rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500") Upload
        a(href="/dashboard" class="w-full py-2 px-4 bg-gray-500 text-white font-bold rounded-md text-center hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500") Cancel
